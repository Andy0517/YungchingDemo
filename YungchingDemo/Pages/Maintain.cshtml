@page
@model MaintainModel
@{
    ViewData["Title"] = "物件維護";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- 使用 Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" />
</head>
<body>
   <div class="container">
        <div class="row text-center">
            <h1 class="page-header">@ViewData["Title"]</h1>
        </div>
        <div class="row">
            <form method="post" asp-page-handler="Search" class="form-inline">
            <div class="form-group">
                <label for="projectId" class="sr-only">專案編號</label>
                <input type="text" id="projectId" name="ProjectId" class="form-control" placeholder="請輸入專案編號" />
            </div>
            <button type="submit" class="btn btn-primary">查詢</button>
            </form>
        </div>
        @if (!string.IsNullOrEmpty(Model._Result.ProjectID) )
        {
            <div class="row">
            <!-- 使用 Partial View 傳入 _Result -->
            @await Html.PartialAsync("Shared/_Info", Model._Result)
            </div>
        }else{
            <div class="row">
                <h3>尚無資料顯示</h3>
            </div>
        }
    </div>
</body>
<footer class="text-center">
    <p>&copy; 2025 - Yungching Demo</p>
</footer>
</html>
